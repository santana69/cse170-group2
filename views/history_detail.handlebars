<!doctype html>

<html>
<head>
	<title>History Detail</title>	
	
	<!-- Add Common Head tags and Base CSS files -->
	{{> head_css}}

	<!-- Custom CSS for this page -->
	<link href="/css/history_detail.css" rel="stylesheet">
</head>

<body>
	<!-- Static navbar -->
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<div class="navbar-brand navbar-brand-centered">{{cause.charity.name}}</div>
				
			</div>
			<a type="button" class="btn btn-default navbar-btn" href="/history">
				<span class="glyphicon glyphicon-remove"></span>
			</a>
		</div>
	</nav>

	<div class="container-fluid">
		<div class="jumbotron" style="padding: 0px; margin-top: -15px;">
			<img src="{{cause.charity.image}}" class="img img-responsive center-block" style="height: 150px; ">
		</div>
	</div>

	<div class="container">
		{{#with cause}}
		<div class="row">
			{{#with charity}}
			<div class="col-xs-12">
				<dl class="thumbnail">
				  <dt>Description:</dt>
				  <dd><span class="text-uppercase">{{action}}</span> {{description}}</dd>
				  <dt>Donation</dt>
				  <dd>${{cost}}</dd>
				  <dt>More Info:</dt>
				  <dd><a href="{{url}}">{{url}}</a></dd>
				</dl>
			</div>
			{{/with}}

			<div class="col-xs-12">
				<div class="my-progress-bar progress">
					<div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
					COMPLETED
					<span class="sr-only">COMPLETED</span>
					</div>
				</div>
			</div>
		</div>
		{{/with}}
  	</div>
  	
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<!-- Include all compiled plugins (blelow), or include individual files as needed -->
	<script src="/js/bootstrap.min.js"></script>
	
	{{> googleAnalytics}}
	
</body>
</html>
