<!doctype html>

<html>
<head>
	<title>Login</title>	
	
	<!-- Add Common Head tags and Base CSS files -->
	{{> head_css}}

	<!-- Custom CSS for this page -->
	<link href="/css/login.css" rel="stylesheet">
</head>

<body>
	<div id="bg-img" class="bg-effect"></div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12">
				<img src="/images/logo.png" class="logo center-block">
				<p class="tagline text-center">Start small. Make a big difference.</p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<div class="signin-form">
					<form class="form-horizontal">
						<div class="form-group">
						    <input type="email" class="form-control input-sm my-input" id="inputEmail3" placeholder="Email">
						</div>
						<div class="form-group">
						    <input type="password" class="form-control input-sm my-input" id="inputPassword3" placeholder="Password">
						</div>
						<div class="form-group">
							<div class="checkbox">
								<label>
									<input type="checkbox"> Remember me
								</label>
							</div>
						</div>
						<div class="form-group">
						    <button type="submit" class="my-btn sign-in-style btn btn-info center-block">Sign in</button>
						</div>
					</form>
					<form class="form-horizontal">
						<div class="form-group">
							<hr></hr>
							<p class="text-center">Don't have an account?</p>
							<button type="submit" class="my-btn sign-up-style btn btn-info center-block">Sign up</button>
						</div>
						<div class="form-group">
						    <a href="#"><p class="carity-info text-center">What is Carity?</p></a>
						</div>
					</form>
				</div>
		  	</div>
	  	</div>
	</div>
  	
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<!-- Include all compiled plugins (blelow), or include individual files as needed -->
	<script src="/js/bootstrap.min.js"></script>

	<!-- Our custom js 
	<script src="/js/settings.js"></script>-->
</body>
</html>
