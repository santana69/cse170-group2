<!doctype html>

<html>
<head>
	<title>My History</title>	
	
	<!-- Add Common Head tags and Base CSS files -->
	{{> head_css}}

	<!-- Custom CSS for this page -->
	<link href="/css/history.css" rel="stylesheet">
</head>

<body>
	<!-- Static navbar -->
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<div class="navbar-brand navbar-brand-centered">My History</div>
				
			</div>
			<a type="button" class="btn btn-default navbar-btn" href="/">
				<span class="glyphicon glyphicon-remove"></span>
			</a>
		</div>
	</nav>

  	<div class="container">
  		{{#if empty}}
  			<!-- No history entries -->
  			<h4 class="text-center">You haven't completed any causes yet :(</h4>
  		{{else}}
  			<div class="row">
				{{#each fullData.history}}
				<div class="col-xs-6 col-md-3">
					<div class="my-panel panel panel-default">
						{{#with charity}}
						<div class="my-causes-body panel-body" id="cause{{@index}}" style="background: linear-gradient(rgba(0,0,0, 0.6), rgba(0,0,0,0.6)), url({{image}}) center no-repeat; background-size: cover;">
							
							<p><strong>{{action}}</strong> {{description}}... <span class="more-info"><strong>more info</strong></span> <!--<span class="more-info-icon glyphicon glyphicon-arrow-right" aria-hidden="true"></span>--> </p>
							<h5 class="causes-cost">${{cost}}</h5>
							
						</div>
						{{/with}}
						<div class="panel-footer">
							<div class="my-progress-bar progress">
		  						<div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
		  						COMPLETED
		    					<span class="sr-only">COMPLETED</span>
		  						</div>
							</div>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
  		{{/if}}
  	</div>
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<!-- Include all compiled plugins (blelow), or include individual files as needed -->
	<script src="/js/bootstrap.min.js"></script>

	{{> googleAnalytics}}
	
	<!-- Our custom js -->
	<script src="/js/history.js"></script>

</body>
</html>
